<% include ../partials/header %>
    <div class="row">
        <div class="col-md-4">
            <img class="img-responsive" src="<%= item.imageUrl %>"> 
        </div>
        <div class="col-md-8">
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <h1><%= item.name %></h1>
                </div>
            </div>
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <h4><%= item.description %></h4>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <h2><strong>Price: <%= item.price %> INR</strong></h2>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <form method="post" action="/categories/<%= categoryId %>/check" >
                        <div class="col-md-7 col-md-offset-1">
                            <div class="form-group">
                                <input type="text" class="form-control" id="pincode" placeholder="pincode" name="pincode">
                            </div>
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-danger btn-md">Check Availability</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <a class="btn btn-primary pull-right btn-lg pull-left" href="/add-to-cart/<%= item._id %>">Add To Cart</a>
                </div>
            </div>
        </div>
    </div>
<% include ../partials/footer %>
